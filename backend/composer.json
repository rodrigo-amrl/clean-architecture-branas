    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.5",
        "pecee/simple-router": "^5.3",
        "psr/http-message": "^1.0",
        "phpunit/phpunit": "^10.2"
    },
    "autoload": {
        "psr-4": {
            "Src\\": "src\\"
